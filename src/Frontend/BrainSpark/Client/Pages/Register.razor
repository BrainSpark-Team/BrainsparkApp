@page "/register"

 

@using Microsoft.AspNetCore.Components.WebAssembly.Authentication
@using Microsoft.AspNetCore.Components.Authorization

 

<RegisterView>
<NotRegister>
<button @onclick="BeginRegister">Register with Azure AD B2C</button>
</NotRegister>
</RegisterView>

 

@code {
    private void BeginRegister()
    {
        NavigationManager.NavigateTo("https://brainsparkdemo.b2clogin.com/brainsparkdemo.onmicrosoft.com/oauth2/v2.0/authorize?p=B2C_1_signup&client_id=7962b62a-81be-4516-869b-d870c48ce9d2&nonce=defaultNonce&redirect_uri=https%3A%2F%2Fashy-desert-0eae5c503.3.azurestaticapps.net%2Fauthentication%2Flogin-callback&scope=openid&response_type=code&prompt=login&code_challenge_method=S256&code_challenge=yYLEvHZMt_OsGuk8Qf396sKrX-rEzfC9Bn-lCydWQTE");
    }

 

    [Inject] public NavigationManager NavigationManager { get; set; }
    [Inject] public AuthenticationStateProvider RegistrationStateProvider { get; set; }
    [Inject] public RemoteAuthenticationService<RemoteAuthenticationState, RemoteUserAccount, OidcProviderOptions> AuthenticationService { get; set; }
}
