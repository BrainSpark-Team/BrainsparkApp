@page "/register"

<div class="container">
	<div class="row">
		<div class="col-12 col-md-8 col-lg-6 mx-auto my-5 login-container">
			<h2 class="text-center login-text">Register</h2>
			<form>
				<div class="mb-3 username-input">
					<label for="username" class="form-label">Username</label>
					<input type="text" class="form-control" id="username" placeholder="username">
				</div>
				<div class="mb-3 email-input">
					<label for="email" class="form-label">Email address</label>
					<input type="email" class="form-control" id="email" placeholder="email">
				</div>
				<div class="mb-3 password-input">
					<label for="password" class="form-label">Password</label>
					<input type="password" class="form-control" id="password" placeholder="password">
				</div>
				<div class="checkbox-container">
					<div class="mb-3 form-check">
						<input type="checkbox" class="form-check-input" id="keepLogin">
						<label class="form-check-label" for="keepLogin">I’ve read and agree with terms of service and our privecy policy</label>
					</div>
				</div>
				<button class="login-btn mx-auto d-block my-4" type="submit">Register</button>
				<div class="mt-4">
					<p class="text-center">Already have an account ? <NavLink class="reg-now-btn" href="/login">SIGN IN</NavLink></p>
				</div>
			</form>
		</div>
	</div>
</div>

@code {
	private string inputValue = string.Empty;
}
