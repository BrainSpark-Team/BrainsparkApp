@* @page "/forgotpassword" *@

<div class="container">
	<div class="row">
		<div class="col-12 col-md-8 col-lg-6 mx-auto my-5 login-container">
			<h2 class="text-center login-text">Forgot password</h2>
			<form>
				<div class="mb-3 email-input">
					<label for="email" class="form-label">Email address</label>
					<input type="email" class="form-control" id="email" placeholder="email">
				</div>
				<p class="reset-pass-text">Enter your email adress and we'll send you a link to reset your password</p>
				<button class="login-btn mx-auto d-block mt-3" type="submit">Continue</button>
			</form>
		</div>
	</div>
</div>

